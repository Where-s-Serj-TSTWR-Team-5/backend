generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plant {
  id                   Int      @id @default(autoincrement())
  name                 String
  scientificName       String?
  description          String?
  sunlightRequirement  Int?
  waterNeeds           Int?
  image                String?
  plantTypeID          Int?
  createdAt            DateTime @default(now())
}

