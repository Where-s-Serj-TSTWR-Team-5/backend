generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id               Int      @id @default(autoincrement())
  organizerId      Int
  organizer        User     @relation(fields: [organizerId], references: [id], onDelete: Cascade)

  title            String
  description      String
  thumbnail        String
  banner           String
  location         String
  startAt          DateTime
  endAt            DateTime
  date             DateTime

  labelId          Int?
  label            EventLabel? @relation(fields: [labelId], references: [id])

  studyPoints      Int?
  points           Int?
  maxParticipants  Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  registrations    EventRegistration[]
}

model EventLabel {
  id        Int            @id @default(autoincrement())
  category  EventCategory  @unique

  events    Event[]
}

enum EventCategory {
  SUSTAINABILITY
  GARDENING
  WORKSHOP
  CLEAN_UP
}

model EventRegistration {
  userId  Int
  eventId Int

  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event   Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  registeredAt DateTime @default(now())

  @@id([userId, eventId])
}

model Plant {
  id                   Int      @id @default(autoincrement())
  name                 String
  scientificName       String?
  description          String?
  sunlightRequirement  Int?
  waterNeeds           Int?
  image                String?
  plantTypeID          Int?
  createdAt            DateTime @default(now())
}

enum Role {
  USER
  GREEN_OFFICE_MEMBER
}

model User {
  id                 Int                 @id @default(autoincrement())
  userName           String              @unique
  email              String              @unique
  password           String
  points             Int                 @default(0)
  role               Role                @default(USER)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  eventRegistrations EventRegistration[]
  organizedEvents    Event[]   @relation()
  pendingRewards     PendingReward[]
}

model Reward {
  id             Int             @id @default(autoincrement())
  title          String
  description    String
  thumbnail      String
  requiredPoints Int
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  pendingRewards PendingReward[]
}

model PendingReward {
  id        Int      @id @default(autoincrement())
  rewardId  Int
  userId    Int

  reward    Reward   @relation(fields: [rewardId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  purchasedAt DateTime @default(now())
}