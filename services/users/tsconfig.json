{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,

    "baseUrl": ".",
    "paths": {
      "@shared/middleware": ["middleware/src"],
      "@shared/middleware/*": ["middleware/src/*"]
    }
  },
  "include": ["src", "middleware/src"]
}
